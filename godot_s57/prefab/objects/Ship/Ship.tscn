script/source = "extends Node3D

# --- AYARLAR ---
@export var offline_test_mode: bool = true # <-- TEST ƒ∞√áƒ∞N BUNU A√áIK (ON) YAP
@export var socket_url: String = \"ws://192.168.98.206:9090\"
@export var publish_rate: float = 10.0

# --- LIDAR 1: ENGEL TESPƒ∞Tƒ∞ (YATAY) ---
@export_group(\"Navigasyon Lidar\")
@export var nav_lidar_node: Node3D 
@export var nav_range: float = 50.0
@export var nav_rays: int = 72 # I≈üƒ±n sayƒ±sƒ±
@export var show_nav_debug: bool = true 

# --- LIDAR 2: DERƒ∞NLƒ∞K/TABAN (Dƒ∞KEY) ---
@export_group(\"Derinlik Lidar\")
@export var depth_lidar_node: Node3D 
@export var depth_range: float = 20.0
@export var depth_rays: int = 10 
@export var show_depth_debug: bool = true

var socket = WebSocketPeer.new()
var nav_raycasts: Array[RayCast3D] = []
var depth_raycasts: Array[RayCast3D] = []
var last_publish_time = 0.0
var is_connected = false

@onready var real_ship = get_parent()

func _ready():
	# Lidar kurulumlarƒ±nƒ± her zaman yap 
	if nav_lidar_node:
		_setup_lidar(nav_lidar_node, nav_rays, nav_range, 360.0, nav_raycasts, Color.RED)
	if depth_lidar_node:
		# 30 derece koni, Mavi renk
		_setup_lidar(depth_lidar_node, depth_rays, depth_range, 30.0, depth_raycasts, Color.BLUE)

	# Baƒülantƒ± Mantƒ±ƒüƒ±
	if offline_test_mode:
		print(\"üõ†Ô∏è OFFLINE MOD: Soket baƒülantƒ±sƒ± kapalƒ±. Sadece Lidar ƒ±≈üƒ±nlarƒ± g√∂steriliyor.\")
	else:
		print(\"üì° RADAR: Baƒülantƒ± kuruluyor... \", socket_url)
		socket.connect_to_url(socket_url)

func _setup_lidar(parent_node, count, dist, fov_angle, array_ref, color):
	for i in range(count):
		var ray = RayCast3D.new()
		parent_node.add_child(ray)
		
		var angle = 0.0
		if fov_angle >= 360:
			angle = i * (TAU / count)
		else:
			if count > 1:
				angle = deg_to_rad(-fov_angle/2 + (i * fov_angle / (count-1)))
			else:
				angle = 0.0
			
		# RayCast Y√∂n√º
		if parent_node == nav_lidar_node:
			# Yatay Tarama (Y ekseni etrafƒ±nda d√∂n)
			ray.target_position = Vector3(dist, 0, 0).rotated(Vector3.UP, angle)
		else:
			# Dikey Tarama (X ekseni etrafƒ±nda d√∂n - a≈üaƒüƒ± doƒüru)
			ray.target_position = Vector3(0, -dist, 0).rotated(Vector3.RIGHT, angle)
			
		ray.enabled = true
		ray.debug_shape_custom_color = color
		ray.debug_shape_thickness = 2
		array_ref.append(ray)

func _process(delta):
	# Test modundaysak aƒü i≈ülemlerini atla
	if offline_test_mode:
		return

	socket.poll()
	var state = socket.get_ready_state()
	
	if state == WebSocketPeer.STATE_OPEN:
		if not is_connected:
			_on_connection_success()
			
		while socket.get_available_packet_count():
			var packet = socket.get_packet().get_string_from_utf8()
			_handle_incoming(packet)
			
		last_publish_time += delta
		if last_publish_time >= (1.0 / publish_rate):
			_publish_data()
			last_publish_time = 0.0
			
	elif state == WebSocketPeer.STATE_CLOSED:
		if is_connected:
			print(\"‚ùå RADAR: Baƒülantƒ± koptu!\")
			is_connected = false

func _on_connection_success():
	print(\"‚úÖ RADAR: BAƒûLANTI BA≈ûARILI!\")
	is_connected = true
	# Komut dinle
	var sub_msg = {\"op\": \"subscribe\", \"topic\": \"/cmd_vel\", \"type\": \"geometry_msgs/msg/Twist\"}
	socket.send_text(JSON.stringify(sub_msg))
	# Odom ve Lidar yayƒ±nla
	socket.send_text(JSON.stringify({\"op\": \"advertise\", \"topic\": \"/odom\", \"type\": \"nav_msgs/msg/Odometry\"}))
	socket.send_text(JSON.stringify({\"op\": \"advertise\", \"topic\": \"/scan\", \"type\": \"sensor_msgs/msg/LaserScan\"}))
	socket.send_text(JSON.stringify({\"op\": \"advertise\", \"topic\": \"/depth_scan\", \"type\": \"sensor_msgs/msg/LaserScan\"}))

func _publish_data():
	var time = Time.get_unix_time_from_system()
	var secs = int(time)
	var nsecs = int((time - secs) * 1e9)
	
	# 1. ODOMETRƒ∞ YAYINI
	if real_ship:
		var pos = real_ship.global_position
		var rot = real_ship.global_transform.basis.get_rotation_quaternion()
		var lin_vel = real_ship.linear_velocity
		var ang_vel = real_ship.angular_velocity
		
		var odom_msg = {
			\"op\": \"publish\",
			\"topic\": \"/odom\",
			\"msg\": {
				\"header\": { \"stamp\": { \"sec\": secs, \"nanosec\": nsecs }, \"frame_id\": \"odom\" },
				\"child_frame_id\": \"base_link\",
				\"pose\": { \"pose\": {
					\"position\": { \"x\": -pos.z, \"y\": -pos.x, \"z\": pos.y },
					\"orientation\": { \"x\": rot.x, \"y\": rot.z, \"z\": -rot.y, \"w\": rot.w }
				}},
				\"twist\": { \"twist\": {
					\"linear\": { \"x\": lin_vel.length(), \"y\": 0.0, \"z\": 0.0 },
					\"angular\": { \"x\": 0.0, \"y\": 0.0, \"z\": ang_vel.y }
				}}
			}
		}
		socket.send_text(JSON.stringify(odom_msg))
	
	# 2. NAVIGASYON LIDAR YAYINI (/scan)
	var nav_ranges = []
	for ray in nav_raycasts:
		if ray.is_colliding():
			nav_ranges.append(ray.global_position.distance_to(ray.get_collision_point()))
		else:
			nav_ranges.append(nav_range + 1.0)
			
	var nav_msg = {
		\"op\": \"publish\",
		\"topic\": \"/scan\",
		\"msg\": {
			\"header\": { \"stamp\": { \"sec\": secs, \"nanosec\": nsecs }, \"frame_id\": \"base_link\" },
			\"angle_min\": 0.0,
			\"angle_max\": 2.0 * PI,
			\"angle_increment\": (2.0 * PI) / float(nav_rays),
			\"range_min\": 0.5,
			\"range_max\": nav_range,
			\"ranges\": nav_ranges
		}
	}
	socket.send_text(JSON.stringify(nav_msg))

	# 3. DERƒ∞NLƒ∞K LIDAR YAYINI (/depth_scan)
	var depth_ranges = []
	for ray in depth_raycasts:
		if ray.is_colliding():
			depth_ranges.append(ray.global_position.distance_to(ray.get_collision_point()))
		else:
			depth_ranges.append(depth_range + 1.0)

	var depth_msg = {
		\"op\": \"publish\",
		\"topic\": \"/depth_scan\",
		\"msg\": {
			\"header\": { \"stamp\": { \"sec\": secs, \"nanosec\": nsecs }, \"frame_id\": \"base_link\" },
			\"angle_min\": deg_to_rad(-15.0), # 30 derecelik koni (-15 ila +15)
			\"angle_max\": deg_to_rad(15.0),
			\"angle_increment\": deg_to_rad(30.0) / float(depth_rays),
			\"range_min\": 0.5,
			\"range_max\": depth_range,
			\"ranges\": depth_ranges
		}
	}
	socket.send_text(JSON.stringify(depth_msg))

func _handle_incoming(json_str):
	var json = JSON.new()
	if json.parse(json_str) == OK:
		var data = json.get_data()
		if data.has(\"topic\") and data[\"topic\"] == \"/cmd_vel\":
			var msg = data[\"msg\"]
			if real_ship:
				real_ship.ros_throttle = clamp(msg[\"linear\"][\"x\"], -1.0, 1.0)
				real_ship.ros_steering = clamp(msg[\"angular\"][\"z\"], -1.0, 1.0)
"

